{
  // Required
  "manifest_version": 2,
  "name": "LGTMize",
  "version": "0.0.1",

  // Recommended
  //"default_locale": "ja",
  "description": "Create Image from playing video",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },

  // Optional
  "author": "ymrl",
  "background": {
    // Recommended
    "persistent": false,
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ],

  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "notifications"
  ]
}
